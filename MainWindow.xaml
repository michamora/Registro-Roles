<Window x:Class="Registro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registro"
        mc:Ignorable="d"
        Title="Registro de Roles" Height="300" Width="400">
    <Grid>
 <StackPanel Margin ="16" Orientation ="Vertical">
 <TextBlock Text ="Registro" FontSize="24"/>

 <TextBlock Text="Rol ID: "/>
 <TextBox x:Name= "RolIDTextBox" Text="" />
 <TextBlock Text="Fecha Creacion: "/>
 <TextBox x:Name= "FechaCreacionTextBox" Text="" />
 <TextBlock Text="Descripcion: "/>
 <TextBox x:Name= "DescripcionTextBox" Text="" />

 <StackPanel 
        Margin = "0,16,0,0"

        Orientation ="Horizontal"
        HorizontalAlignment="Center" >

        <Button Content ="📥Guardar" Click="GuardarButton_Click" />
        <Button Content ="📋Editar" />
        <Button Content ="❌Eliminar" Click="EliminarButton_Click"/>
        <Button Content ="✅Validar" Click="ValidarButton_Click"/>
        
 </StackPanel>
 </StackPanel>

    </Grid>
</Window>
